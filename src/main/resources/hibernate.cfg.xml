<hibernate-configuration>
    <session-factory>
        <property name="hibernate.connection.driver_class">oracle.jdbc.OracleDriver</property>
        <property name="hibernate.connection.url">jdbc:oracle:thin:@192.168.238.3:1521:DEV2</property>
        <property name="hibernate.connection.username">DEV_BANCO</property>
        <property name="hibernate.connection.password">DEV_BANCO</property>
